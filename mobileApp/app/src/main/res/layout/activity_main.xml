<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/LinearLayout"
            tools:context=".activities.MainActivity">

            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/menuButton"
                    android:text="Menu"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:onClick="menuButtonPressed"/>


            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/pulseTextView"
                    android:text="TEST"
                    android:textSize="72px"
                    android:layout_gravity="center" android:layout_marginTop="100dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:visibility="invisible"
                    android:id="@+id/alertLayout"
                    android:orientation="vertical" android:weightSum="1">

                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="0.85"
                              android:background="#E0E0E0"
                              android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
                              android:id="@+id/cancelMessage"
                              android:hint="Tell us what happened."
                              android:gravity="top"
                              android:inputType="text|textMultiLine"/>

                    <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:text="Cancel alarm"
                            android:id="@+id/cancelAlarmButton"
                            android:onClick="cancelFallAlarm"/>

            </LinearLayout>

</LinearLayout>